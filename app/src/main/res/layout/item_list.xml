<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp"
    android:id="@+id/card"
    app:cardMaxElevation="15dp">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading"
            app:lottie_renderMode="automatic" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            tools:src="@drawable/item" />


        <TextView
            android:id="@+id/productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:text="Product Name"
            android:textColor="@color/material_blue_grey_80"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/productprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productname"
            android:text="Product Price : "
            android:textColor="@color/material_blue_grey_80"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productstock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productprice"
            android:text="Product Stock : "
            android:textColor="@color/material_blue_grey_80"
            android:textSize="18sp"
            android:textStyle="bold" />


        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productstock"
            app:backGroundColor="#8DEBF1F4"
            app:backgroundDrawable="@drawable/rounded"
            app:initialNumber="1"
            app:textColor="@color/material_blue_grey_90"
            app:textSize="9sp" />


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qty"
            android:backgroundTint="#0288D1"
            android:text="Add to cart"
            app:cornerRadius="10dp"
            app:icon="@drawable/addcart"
            android:id="@+id/addtocart"
            app:iconGravity="textStart" />



    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>